{
  "name": "mart-for-you",
  "version": "1.0.0",
  "description": "A modern, full-featured e-commerce web application built with React and Tailwind CSS. Features product browsing, filtering, cart management, and user profile functionality.",
  "private": true,
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Mart - For You Team",
    "email": "contact@martforyou.com",
    "url": "https://martforyou.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mart-for-you.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/mart-for-you/issues"
  },
  "homepage": "https://yourusername.github.io/mart-for-you/",
  "keywords": [
    "react",
    "ecommerce",
    "shopping-cart",
    "tailwindcss",
    "vite",
    "framer-motion",
    "dark-mode",
    "responsive",
    "spa",
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css,json}\"",
    "clean": "rimraf dist node_modules/.cache",
    "clean:all": "rimraf dist node_modules",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "prepare": "echo 'Ready for development'",
    "prebuild": "npm run lint",
    "postbuild": "echo 'Build completed successfully!'"
  },
  "dependencies": {
    "framer-motion": "^12.24.0",
    "lucide-react": "^0.562.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.30.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "gh-pages": "^6.2.0",
    "globals": "^15.14.0",
    "postcss": "^8.5.3",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.7"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
