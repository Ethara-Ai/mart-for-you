# ===========================================
# MART FOR YOU - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# Never commit .env to version control!

# ===========================================
# Application Settings
# ===========================================

# Application environment (development | staging | production)
VITE_APP_ENV=development

# Application URL (used for SEO and social sharing)
VITE_APP_URL=http://localhost:3000

# Application name
VITE_APP_NAME="Mart For You"

# ===========================================
# API Configuration
# ===========================================

# Backend API base URL (if/when backend is added)
VITE_API_BASE_URL=http://localhost:8000/api

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# ===========================================
# Feature Flags
# ===========================================

# Enable/disable dark mode feature
VITE_FEATURE_DARK_MODE=true

# Enable/disable user registration
VITE_FEATURE_USER_REGISTRATION=false

# Enable/disable checkout functionality
VITE_FEATURE_CHECKOUT=true

# Enable/disable analytics tracking
VITE_FEATURE_ANALYTICS=false

# ===========================================
# Analytics & Monitoring (Optional)
# ===========================================

# Google Analytics Measurement ID
VITE_GA_MEASUREMENT_ID=

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# ===========================================
# Third-Party Services (Optional)
# ===========================================

# Stripe publishable key (for payments)
VITE_STRIPE_PUBLISHABLE_KEY=

# Cloudinary cloud name (for image uploads)
VITE_CLOUDINARY_CLOUD_NAME=

# ===========================================
# Development Settings
# ===========================================

# Enable React Query DevTools
VITE_ENABLE_DEVTOOLS=true

# Mock API responses in development
VITE_MOCK_API=false
